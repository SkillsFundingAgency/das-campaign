@{
    ViewBag.Title = "View Basket";
    ViewBag.MetaTitle = "View Basket";
    ViewBag.PageID = "employer-view-basket";
    ViewBag.Section = "employer";
    ViewBag.MetaDesc = "";
    Layout = "_LayoutContentFull";
    ViewBag.PageNavIndex = 3;
    @model Sfa.Das.Sas.Shared.Components.ViewModels.ApprenticeshipDetailQueryViewModel

}

@section HeroHeading {
    <div class="hero" data-module="smoothScroll">
        <div class="grid-row">

            @await Component.InvokeAsync("BasketHeader")

            <a href="https://www.gov.uk/" id="header-link-govuk" target="_blank" class="hero-heading__hm-government-link">
                <img alt="HM Government" class="hero-heading__hm-government-logo" src="/campaign/images/hm-government-logo.png" srcset="/campaign/images/hm-government-logo.png 1x, /campaign/images/hm-government-logo@2x.png 2x" />
            </a>

        </div>
    </div>

    @await Component.InvokeAsync("BasketDetails")

}




