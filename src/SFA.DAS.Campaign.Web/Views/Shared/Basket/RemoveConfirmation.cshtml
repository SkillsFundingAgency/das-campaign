@{
    ViewBag.Title = "Remove confirmation";
    ViewBag.MetaTitle = "Remove confirmation";
    ViewBag.PageID = "employer-view-basket";
    ViewBag.Section = "employer";
    ViewBag.MetaDesc = "";
    ViewBag.PageUrl = "/Basket/RemoveConfirmation";
    Layout = "_LayoutContentFull";
    ViewBag.PageNavIndex = 3;
    @model Sfa.Das.Sas.Shared.Components.ViewModels.Basket.RemoveConfirmationViewModel
}

<p>If you remove @Model.ApprenticeshipItem.Title from your shortlist, you'll also remove these saved training providers:</p>

<ul class="list list--bullet list--bullet-employer">
    @foreach (var tp in Model.ApprenticeshipItem.Providers)
    {
        <li>
            @tp.Name
        </li>
    }
</ul>

<p>Do you want to remove this apprenticeship?</p>

<form method="post">
    <button id="continueButton" class="button button--inverted" type="submit">
        OK <span class="vh">delete the apprenticeship and the training providers</span>
    </button>
    <a href="@Model.ReturnPath" class="button">Cancel <span class="vh">and return to the previous page</span></a>
</form>