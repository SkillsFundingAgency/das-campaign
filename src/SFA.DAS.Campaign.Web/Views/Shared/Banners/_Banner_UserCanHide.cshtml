@using SFA.DAS.Campaign.Web.Helpers
@model SFA.DAS.Campaign.Domain.Content.HtmlControl.Banner

@if (Model.AllowUserToHideTheBanner)
{
    if (ViewBag.HomePage != null && ViewBag.HomePage && Model.ShowOnTheHomepageOnly || !Model.ShowOnTheHomepageOnly)
    {
        <div class="fiu-banner @Model.GetAnnouncementCssClass()" data-fiu-banner="true" data-fiu-banner-cookie-name="fiu-banner-@Model.Id">
            <div class="fiu-width-container">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-three-quarters">
                        <h2 class="fiu-banner__heading">@Model.Title</h2>
                        <div class="fiu-banner__body fiu-article">
                            @Model.Content.ToHtml()
                        </div>
                    </div>
                    <div class="govuk-grid-column-one-quarter">
                        <a href="#" data-fiu-banner-hide-link="true" class="fiu-banner__hide-link">Hide message</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
