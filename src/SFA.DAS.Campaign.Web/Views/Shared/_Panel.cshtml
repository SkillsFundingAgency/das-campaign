@using SFA.DAS.Campaign.Web.Helpers
@model SFA.DAS.Campaign.Domain.Content.Panel

<div class="fiu-banner">
    <div class="fiu-width-container">
        <h2 class="fiu-banner__heading">@Model.Title</h2>
        <div class="fiu-banner__body fiu-article">
            @Model.Content.ToHtml()
        </div>
        @if(Model.MainImage != null && !string.IsNullOrWhiteSpace(Model.MainImage.Url))
        {
            <img src="@Model.MainImage.Url" />
        }
    </div>
</div>