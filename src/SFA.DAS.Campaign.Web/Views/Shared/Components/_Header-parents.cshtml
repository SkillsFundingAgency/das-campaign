<div class="modal" id="switch-profiles" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <a href="#" class="close">
                <svg width="32" height="32" viewBox="0 0 32 32" class="">
                    <rect class="modal--icon-close" x="1.58691" y="0.0893555" width="16.0371" height="2.16583" transform="rotate(45 1.58691 0.0893555)"></rect>
                    <rect class="modal--icon-close" x="0.0966797" y="11.34" width="16.0371" height="2.16583" transform="rotate(-45 0.0966797 11.34)"></rect>
                </svg>
                <span class="vh">Close this popup</span>
            </a>
        </div>
        <h2 class="heading-m">Choose your preference...</h2>
        <ul class="card__collection card__collection--profile-switch">
            <li>
                <a class="card card--apprentice" asp-controller="RealStories" asp-action="Apprentice">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Apprenticeships</h2>
                        <p class="card__summary">
                            Start your journey - become an apprentice
                        </p>
                    </div>
                </a>
            </li>
            <li>
                <a class="card card--employer" asp-controller="RealStories" asp-action="Employer">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Employer</h2>
                        <p class="card__summary">
                            Be part of the change - employ an apprentice
                        </p>
                    </div>
                </a>
            </li>
        </ul>
    </div>
</div>
<header class="header" data-module="navigation">
    <div class="header__logo">
        <a asp-controller="Parents" asp-action="TheirCareer">
            <img src="/campaign/images/apprenticeships-logo-parents.png" alt="Apprenticeships Logo" class="header__logo-image" />
            <span class="header__caption header__caption--parents">Parents hub</span>
        </a>
    </div>
    <a href="#navigation" class="navigation__toggle">
        <span class="navigation__toggle-label" id="nav-label">Menu</span>
        <span class="nav-profile-switcher__caption">Discover information for employers and future apprentices</span>
        <span class="navigation__toggle-icon"></span>
    </a>
    <nav id="navigation" class="nav nav--parents">
        <ul class="nav__list">
            <li>
                <a href="#switch-profiles" class="nav-profile-switcher">
                    Not a parent?
                    <span class="nav-profile-switcher__icon"></span>
                </a>
            </li>
            <li class="nav__list-item">
                <a asp-controller="Parents" asp-action="TheirCareer" class="nav__link--top-level" id="link-nav-parents">
                    Thier career
                </a>
            </li>
            @{ 
            if (ViewBag.HideRegisterInterest != true) {
                    <li>
                        <a class="nav-register-interest" asp-action="index" asp-controller="RegisterInterest" id="btn-register-interest-header">Register interest</a>
                    </li>
                }
            }
        </ul>
    </nav>
</header>