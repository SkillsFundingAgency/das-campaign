@model SFA.DAS.Campaign.Web.Models.RegisterInterestModel
<div class="grid-row">
    <div class="grid-column-full">
        <form asp-controller="RegisterInterest" asp-action="Index">
            <section class="section">
                <div class="grid-row">
                    <div class="grid-column-full">
                        <span class="caption-s">Register interest</span>
                        <h1 class="heading-m">Keep me up to date with the latest information</h1>
                        <div asp-validation-summary="All" class="form-validation-summary">
                            <h3 class="heading-s">Sorry but there seems to be a problem with you registration</h3>
                        </div>
                        <div class="form-group" das-validation-for="FirstName" das-validationerror-class="form-group-validation-error">
                            <label class="label visually-hidden" asp-for="FirstName">
                                First name
                            </label>
                            <input class="input" asp-for="FirstName" type="text" placeholder="First name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group" das-validation-for="LastName" das-validationerror-class="form-group-validation-error">

                            <label class="label visually-hidden" asp-for="LastName">
                                Last name
                            </label>
                            <input class="input" asp-for="LastName" type="text" placeholder="Last name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group" das-validation-for="EmailAddress" das-validationerror-class="form-group-validation-error">

                            <label class="label visually-hidden" asp-for="EmailAddress">
                                Email Address
                            </label>
                            <input class="input" asp-for="EmailAddress" type="text" placeholder="Email address">
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group radios" das-validation-for="Route" das-validationerror-class="form-group-validation-error">
                            We want to engage with you in future, what type of user are you?
                            <div class="radios__item">
                                <input class="input radios__input" asp-for="Route" value="1" type="radio" id="rbApprentice" /><label class="label radios__label">I’m to become an <span class="text--apprentice">apprentice</span> </label>
                            </div>
                            <div class="radios__item">
                                <input class="input radios__input" asp-for="Route" value="2" type="radio" id="rbEmployer" /><label class="label radios__label">I want to <span class="text--employer">employ</span> an apprentice</label>

                            </div>
                        </div>
                        <div class="form-group" das-validation-for="AcceptTandCs" das-validationerror-class="form-group-validation-error">
                            <div class="checkboxes__item">
                                <input class="checkboxes__input" asp-for="AcceptTandCs" type="checkbox" value="true">
                                <label class="label checkboxes__label" asp-for="AcceptTandCs">
                                    I agree to the terms and conditions
                                </label>
                                <span asp-validation-for="AcceptTandCs" class="text-danger"></span>
                            </div>
                        </div>

                        <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />
                        @await Component.InvokeAsync("Button", new { type = ButtonType.Button, style = ButtonStyle.PrimaryInverted, name = "registerInterestSubmit", text = "Register Interest", shadow = false })


                    </div>
                </div>
            </section>
        </form>
    </div>
</div>
<div class="grid-row-full-width">
    <div class="grid-column-full">
        <section class="section section-grey">
            <div class="grid-row">

                <div class="grid-column-one-half">
                    <h2 class="heading-s">Apprentice</h2>
                    <hr class="hr hr-apprentice">
                    <ul class="list form-list list-apprentice list--bullet">
                        <li class="form-list-item">
                            get paid and learn at the same time, with at least 20% of your time set aside for
                            learning - normally at a
                            college, university or other training providers
                        </li>
                        <li class="form-list-item">
                            gain official certification of your skills, equivalent to a qualification ranging
                            from level 2 (GCSE
                            equivalent) up to degree level
                        </li>
                        <li class="form-list-item">start a long-term career path with the possibility of higher earnings</li>
                    </ul>
                </div>
                <div class="grid-column-one-half">
                    <h2 class="heading-s">Employer</h2>
                    <hr class="hr hr-employer">
                    <ul class="list form-list list-employer list--bullet">
                        <li class="form-list-item">
                            get paid and learn at the same time, with at least 20% of your time set aside for
                            learning - normally at a
                            college, university or other training providers
                        </li>
                        <li class="form-list-item">
                            gain official certification of your skills, equivalent to a qualification ranging
                            from level 2 (GCSE
                            equivalent) up to degree level
                        </li>
                        <li class="form-list-item">start a long-term career path with the possibility of higher earnings</li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</div>