@model FindApprenticeshipSearchModel

<form asp-controller="FindApprenticeship" asp-action="UpdateSearch" class="fiu-inline-form">
    <div class="govuk-form-group fiu-inline-form-group govuk-!-width-one-half">
        <label for="header-route" class="govuk-label fiu-visually-hidden">Select an interest</label>
        <select class="govuk-select " asp-for="Route" data-val="true" data-val-required="The interest field is required." id="header-route" name="Route">
            <option selected disabled hidden>Select interest</option>
            <option value="Agriculture-environmental-and-animal-care">Agriculture, environmental and animal care</option>
            <option value="Business-and-administration">Business and administration</option>
            <option value="Care-services">Care services </option>
            <option value="Catering-and-hospitality">Catering and hospitality</option>
            <option value="Construction">Construction</option>
            <option value="Creative-and-design">Creative and design</option>
            <option value="Digital">Digital</option>
            <option value="Education-and-childcare">Education and childcare</option>
            <option value="Engineering-and-manufacturing">Engineering and manufacturing</option>
            <option value="Hair-and-beauty">Hair and beauty</option>
            <option value="Health-and-science">Health and science</option>
            <option value="Legal-finance-and-accounting">Legal, finance and accounting</option>
            <option value="Protective-services">Protective services</option>
            <option value="Sales-marketing-and-procurement">Sales, marketing and procurement</option>
            <option value="Transport-and-logistics">Transport and logistics</option>
        </select>
    </div>
    <div class="govuk-form-group fiu-inline-form-group">
        <label for="header-postcode" class="govuk-label fiu-visually-hidden">Enter your postcode</label>
        <input type="text" class="govuk-input govuk-input--width-10" asp-for="Postcode" id="header-postcode" name="Postcode" autocomplete="postal-code" />
    </div>
    <div class="govuk-form-group fiu-visually-hidden">
        <label for="header-distance" class="govuk-label">Within</label>
        <select class="govuk-select" asp-for="Distance" data-val="true" data-val-required="The Distance field is required." id="header-distance" name="Distance">
            <option value="2">2 miles</option>
            <option value="5">5 miles</option>
            <option value="10">10 miles</option>
            <option value="15">15 miles</option>
            <option value="20">20 miles</option>
            <option value="30">30 miles</option>
            <option value="40" selected="selected">40 miles</option>
        </select>
    </div>
    <div class="govuk-form-group fiu-inline-form-group">
        <button class="fiu-button fiu-button--citizens govuk-!-margin-bottom-0" type="submit" id="button-faa-update-results">Update</button>
    </div>
</form>