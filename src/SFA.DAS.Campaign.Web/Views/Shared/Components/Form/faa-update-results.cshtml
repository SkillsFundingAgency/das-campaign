@model FindApprenticeshipSearchModel


<section class="search-results-filter search-results-filter--apprentice">
    <div class="grid-row">
        <div class="grid-column-full">
            <h2 class="heading-m">update search</h2>
            <form class="search-results-filter__form" asp-controller="FindApprenticeship" asp-action="UpdateSearch">


                <div class="form-group">
                    <label class="label" for="Postcode">Postcode</label>
                    <input class="input" asp-for="Postcode">
                </div>

                <div class="form-group">
                    <label class="label" for="Distance">Distance</label>
                    <select class="input" asp-for="Distance" data-val="true" data-val-required="The Distance field is required."
                            id="Distance" name="Distance">
                        <option value="2">2 miles</option>
                        <option value="5">5 miles</option>
                        <option value="10">10 miles</option>
                        <option value="15">15 miles</option>
                        <option value="20">20 miles</option>
                        <option value="30">30 miles</option>
                        <option value="40">40 miles</option>
                    </select>

                    <span class="text-danger field-validation-valid" data-valmsg-for="Distance"
                          data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update results" class="button">
                </div>

                <input id="Latitude" type="hidden" value="52.39967">
                <input id="Longitude" type="hidden" value="-0.535045">
                <input id="Postcode" type="hidden" value="nn144tn">
                <input id="Distance" type="hidden" value="5">
            </form>
        </div>
    </div>
</section>