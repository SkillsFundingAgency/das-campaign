@using Sfa.Das.Sas.Shared.Components.ViewComponents.TrainingProvider.SearchSummary
@model SFA.DAS.Campaign.Web.ViewComponents.TrainingProviderHeadingViewModel
                                       
<div class="hero" data-module="smoothScroll">
    <div class="grid-row">
        <div class="grid-column-one-half">
            <div class="hero-heading">
                <span class="caption-m hero-heading__caption hero-heading__caption--employer">Search apprenticeships  >  Training provider results</span>
                <h1 class="heading-xl hero-heading__heading">@await Component.InvokeAsync("TrainingProviderTitle", new { searchQueryModel = Model.SearchResults.SearchQuery })</h1>
            </div>
          
            @await Component.InvokeAsync("TrainingProviderSearchSummary", new { searchQueryModel = Model.SearchResults.SearchQuery})
        </div>
    </div>
</div>