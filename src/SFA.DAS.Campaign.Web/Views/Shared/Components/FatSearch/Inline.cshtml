@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewModels.Fat.Search.FatSearchViewModel
@inject ICssViewModel CssViewModel

<form asp-controller="Fat" asp-action="Search" method="get">
    <label asp-for="Keywords" class="govuk-label fiu-visually-hidden">Apprenticeship name or job role</label>
    <div class="fiu-form-group-inline govuk-!-width-three-quarters">
        <input asp-for="Keywords" class="govuk-input" type="search">
        <div class="fiu-form-group-inline__button-wrap">
            <button class="fiu-button fiu-button--employers" type="submit" id="employer-apprenticeship-search">Search</button>
        </div>
    </div>
</form>