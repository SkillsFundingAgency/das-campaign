<div class="modal" id="switch-profiles" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <a href="#" class="close" id="close-modal-switch-profiles">
                <svg width="32" height="32" viewBox="0 0 32 32" class="">
                    <rect class="modal--icon-close" x="1.58691" y="0.0893555" width="16.0371" height="2.16583" transform="rotate(45 1.58691 0.0893555)"></rect>
                    <rect class="modal--icon-close" x="0.0966797" y="11.34" width="16.0371" height="2.16583" transform="rotate(-45 0.0966797 11.34)"></rect>
                </svg>
                <span class="vh">Close this popup</span>
            </a>
        </div>
        <h2 class="heading-m">Choose your preference...</h2>
        <ul class="card__collection card__collection--profile-switch">
            <li>
                <a class="card card--apprentice" asp-controller="RealStories" asp-action="Apprentice" id="link-switch-profiles-apprentice">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Apprenticeships</h2>
                        <p class="card__summary">
                            Start your journey - become an apprentice
                        </p>
                    </div>
                </a>
            </li>
            <li>
                <a class="card card--parent" asp-controller="Parents" asp-action="TheirCareer" id="link-switch-profiles-parents">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Parents</h2>
                        <p class="card__summary">
                            Help shape their career - support an apprentice
                        </p>
                    </div>
                </a>
            </li>
        </ul>
    </div>
</div>
<header class="header" data-module="navigation">
    <div class="header__logo">
        <a asp-controller="RealStories" asp-action="Employer">
            <img src="/campaign/images/apprenticeships-logo-employer.png" alt="Apprenticeships Logo" class="header__logo-image" />
            <span class="header__caption header__caption--employer">Employer hub</span>
        </a>
    </div>
    <a href="#navigation" class="navigation__toggle">
        <span class="navigation__toggle-label" id="nav-label">Menu</span>
        <span class="navigation__toggle-icon"></span>
    </a>
    <nav id="navigation" class="nav nav--employer">
        <ul class="nav__list">
            <li>
                <a href="#switch-profiles" class="nav-profile-switcher" id="link-nav-switch-profiles">
                    Not an employer?
                    <span class="nav-profile-switcher__caption">Discover information for parents, guardians and future apprentices</span>
                    <span class="nav-profile-switcher__icon"></span>
                </a>
            </li>
            <li class="nav__list-item nav__list-item--has-children">
                <a asp-controller="RealStories" asp-action="Employer" class="nav__link--top-level" id="link-nav-employer-1">
                    <span>Are apprenticeships right for you?</span>
                    <span class="nav__ordered-list-toggle"></span>
                    <span class="nav__ordered-list-toggle-icon"></span>
                </a>
                <ol class="nav__ordered-list">
                    <li>
                        <a asp-controller="RealStories" asp-action="Employer" class="nav__link" id="link-nav-app-real-stories">
                            Real stories
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Employer" asp-action="Benefits" class="nav__link" id="link-nav-app-benefits">
                            The benefits of apprenticeships
                        </a>
                    </li>
                </ol>
            </li>
            <li class="nav__list-item nav__list-item--has-children">
                <a asp-controller="HowDoTheyWork" asp-action="Index" class="nav__link--top-level" id="link-nav-employer-2">
                    <span>How do they work?</span>
                    <span class="nav__ordered-list-toggle"></span>
                    <span class="nav__ordered-list-toggle-icon"></span>
                </a>
                <ol class="nav__ordered-list">
                    <li>
                        <a asp-controller="HiringAnApprentice" asp-action="Index" class="nav__link" id="link-nav-emp-hdw-1">
                            Hiring an apprentice
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Upskill" asp-action="Index" class="nav__link" id="link-nav-emp-hdw-2">
                            Upskilling your current staff
                        </a>
                    </li>
                    <li>
                        <a asp-controller="FundingAnApprenticeship" asp-action="Index" class="nav__link" id="link-nav-emp-hdw-3">
                            Funding an apprenticeship
                        </a>
                    </li>
                    <li>
                        <a asp-controller="TrainingYourApprentice" asp-action="Index" class="nav__link" id="link-nav-emp-hdw-4">
                            Training your apprentice
                        </a>
                    </li>
                    <li>
                        <a asp-controller="EndPointAssessments" asp-action="Index" class="nav__link" id="link-nav-emp-hdw-6">
                            End-point assessments
                        </a>
                    </li>
                </ol>
            </li>
            <li class="nav__list-item nav__list-item--has-children">
                <a asp-controller="Employer" asp-action="TheRightApprenticeship" class="nav__link--top-level" id="link-nav-employer-3">
                    <span>Setting it up</span>
                    <span class="nav__ordered-list-toggle"></span>
                    <span class="nav__ordered-list-toggle-icon"></span>
                </a>
                <ol class="nav__ordered-list">
                    <li>
                        <a asp-controller="Employer" asp-action="TheRightApprenticeship" class="nav__link" id="link-nav-emp-step-2">
                            Choose the right apprenticeship
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Employer" asp-action="ChooseATrainingProvider" class="nav__link" id="link-nav-emp-step-3">
                            Choose a training provider
                        </a>
                    </li>

                </ol>
            </li>
            <li class="nav__list-item">
                <a asp-controller="Employer" asp-action="FindApprenticeshipTraining" class="nav__link--top-level" id="link-nav-employer-4">
                    Search for an apprenticeship
                </a>
            </li>
            @await Component.InvokeAsync("BasketIcon")
            @{
                if (ViewBag.HideRegisterInterest != true)
                {
                    <li>
                        <a class="nav-register-interest" asp-action="index" asp-controller="RegisterInterest" asp-route-route="employer" id="btn-register-interest-header">Register interest</a>
                    </li>
                }
            }
        </ul>
    </nav>
</header>