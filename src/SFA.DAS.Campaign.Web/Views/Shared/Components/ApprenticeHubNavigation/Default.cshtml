@model SFA.DAS.Campaign.Application.Content.ContentTypes.NavigationBar

<div class="modal" id="switch-profiles" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <a href="#" class="close" id="close-modal-switch-profiles">
                <svg width="32" height="32" viewBox="0 0 32 32" class="">
                    <rect class="modal--icon-close" x="1.58691" y="0.0893555" width="16.0371" height="2.16583" transform="rotate(45 1.58691 0.0893555)"></rect>
                    <rect class="modal--icon-close" x="0.0966797" y="11.34" width="16.0371" height="2.16583" transform="rotate(-45 0.0966797 11.34)"></rect>
                </svg>
                <span class="vh">Close this popup</span>
            </a>
        </div>
        <h2 class="heading-m">Choose your preference...</h2>
        <ul class="card__collection card__collection--profile-switch">
            <li>
                <a class="card card--employer" asp-controller="RealStories" asp-action="Employer" id="link-switch-profiles-employer">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Employer</h2>
                        <p class="card__summary">
                            Be part of the change - employ an apprentice
                        </p>
                    </div>
                </a>
            </li>
            <li>
                <a class="card card--parent" asp-controller="Parents" asp-action="TheirCareer" id="link-switch-profiles-parents">
                    <div class="card__image">
                        <span class="card__img"></span>
                    </div>
                    <div class="card__content">
                        <h2 class="card__headline card__headline--ribbon">Parents</h2>
                        <p class="card__summary">
                            Help shape their career - support an apprentice
                        </p>
                    </div>
                </a>
            </li>
        </ul>
    </div>
</div>

<header class="header" data-module="navigation">
    <div class="header__logo">
        <a asp-controller="RealStories" asp-action="Apprentice">
            <img src="/campaign/images/apprenticeships-logo-apprentice.png" alt="Apprenticeships Logo" class="header__logo-image" />
            <span class="header__caption header__caption--apprentice">Apprentice hub</span>
        </a>
    </div>
    <a href="#navigation" class="navigation__toggle">
        <span class="navigation__toggle-label" id="nav-label">Menu</span>
        <span class="navigation__toggle-icon"></span>
    </a>
    <nav id="navigation" class="nav nav--apprentice">
        <ul class="nav__list">
            <li>
                <a href="#switch-profiles" class="nav-profile-switcher" id="link-nav-switch-profiles">
                    Not a future apprentice?
                    <span class="nav-profile-switcher__caption">Discover information for employers, parents and guardians</span>
                    <span class="nav-profile-switcher__icon"></span>
                </a>
            </li>
            
            
            @foreach (var navmenu in Model.NavBarEntries)
            {
                @if (navmenu.PageLinks.Count == 1)
                {
                    <li class="nav__list-item">
                        <a href="/apprentice/@navmenu.PageLinks[0].PageSlug" class="nav__link--top-level" id="link-nav-apprentice-4">
                            @navmenu.PageLinks[0].Title
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav__list-item nav__list-item--has-children">
                        <a href="/apprentice/@navmenu.PageLinks[0].PageSlug" class="nav__link--top-level" id="link-nav-apprentice-1">
                            <span>@navmenu.Title</span>
                            <span class="nav__ordered-list-toggle"></span>
                            <span class="nav__ordered-list-toggle-icon"></span>
                        </a>
                    
                        <ol class="nav__ordered-list">
                            @foreach (var pageLink in navmenu.PageLinks)
                            {
                                <li>
                                    <a href="/apprentice/@pageLink.PageSlug" class="nav__link" id="link-nav-app-real-stories">
                                        @pageLink.Title
                                    </a>
                                </li>
                            }
                        </ol>
                    </li>
                }
            }
            
            
