@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.Basket.BasketIconViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject ICssViewModel CssViewModel

@if (Model.ItemCount > 0)
{
    <a  asp-controller="Basket" asp-action="View" class="fiu-navigation__favourites-link" title="@Model.ItemCount favourites in your basket">
        <span class="fiu-navigation__favourites-link__text">Favourites</span>
        <span class="fiu-navigation__favourites-link__count">@Model.ItemCount</span>
    </a>
}
else
{
    <a  asp-controller="Basket" asp-action="View" class="fiu-navigation__favourites-link" title="Your favourites">
        <span class="fiu-navigation__favourites-link__text">Favourites</span>
    </a>
}
