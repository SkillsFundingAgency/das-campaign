@using System.Runtime.Versioning
@using SFA.DAS.Campaign.Web.Models.Components.Form
@using SFA.DAS.Campaign.Web.ViewComponents.Modal
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#0b0c0c" />

    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="/campaign/images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/campaign/images/apple-touch-icon-180x180.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/campaign/images/apple-touch-icon-167x167.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/campaign/images/apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" href="/campaign/images/apple-touch-icon.png" />

    <!--[if !IE 8]><!-->

    <link href="/campaign/css/screen.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.typekit.net/tyj1hwm.css" />

    <!--<![endif]-->

    <meta property="og:image" content="/campaign/images/opengraph.png" />

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body class="page-template">

    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a href="#main-content" class="skip-link">Skip to main content</a>

    <div class="wrap">

        <partial name="./Components/_Header" />

        @RenderBody()

        <partial name="./Components/_Footer" />

    </div>

    <mini-profiler />

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="/campaign/js/app.min.js"></script>
    <script src="/js/das-all.js"></script>
    <script>
        window.DASFrontend.initAll()
    </script>



    @await Component.InvokeAsync("Modal", new { id = "modal-RegisterInterest",type = ModalType.Component, name = "Form", componentOptions = new { type = FormType.Registerinterest } })

    @await Component.InvokeAsync("Modal", new { id = "modal-register-thanks",type = ModalType.PartialView, name = "Components/Form/Register-Thanks" })

</body>

</html>