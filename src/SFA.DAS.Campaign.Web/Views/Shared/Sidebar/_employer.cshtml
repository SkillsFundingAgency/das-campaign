@model SFA.DAS.Campaign.Web.ViewComponents.Sidebar.SidebarViewModel
@{
    var activeClass = "sidebar-nav__section--active";
}

    <div class="trimmer">
        <div class="sidebar__header">
            <h2 class="heading-s sidebar__heading">What are the steps for hiring apprentices</h2>
        </div>
    </div>
<div class="sidebar__content">
    <ol class="sidebar-nav">
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-what-are-the-costs-to-me" ? activeClass : null ) "><a asp-controller="Employer" asp-action="HowMuchIsItGoingToCost" id="link-sidebar-employer-1"> How much is it going to cost?</a></li>
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-the-right-apprenticeship" ? activeClass : null ) "><a asp-controller="Employer" asp-action="TheRightApprenticeship" id="link-sidebar-employer-2"> The right apprenticeship</a></li>
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-choose-training-provider" ? activeClass : null ) "><a asp-controller="Employer" asp-action="ChooseATrainingProvider" id="link-sidebar-employer-3"> Choose a training provider</a></li>
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-hire-an-apprentice" ? activeClass : null ) "><a asp-controller="Employer" asp-action="HireAnApprentice" id="link-sidebar-employer-4"> Hire an apprentice</a> </li>
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-preparing-monitoring" ? activeClass : null ) "><a asp-controller="Employer" asp-action="PreparingAndMonitoring" id="link-sidebar-employer-5"> Preparing and monitoring</a></li>
        <li class="sidebar-nav__section @( ViewData["PageID"].ToString() == "employer-assessment-certification" ? activeClass : null ) "><a asp-controller="Employer" asp-action="AssessmentAndQualification" id="link-sidebar-employer-6"> Assessment and certification</a></li>
    </ol>
</div>
<div class="trimmer">
    <div class="sidebar__sub-content">
        <a class="button button--sparks button--shadow " asp-action="index" asp-route-version="1" asp-controller="RegisterInterest" id="btn-sidebar-register-interest-apprentice">Register Interest</a>
    </div>
</div>
<div class="trimmer">
    <div class="sidebar__sub-content sidebar__sub-content--mid">
        <h2 class="heading-m sidebar__heading">Already have a <img class="sidebar__sub-content-crown-logo" src="/assets/images/govuk-mask-icon.svg" alt="" /> gov.uk account?</h2>
        <a id="link-sidebar-ma-cta" class="button button-inverted button--shadow" href="https://accounts.manage-apprenticeships.service.gov.uk/service/index" rel="external" target="_blank">Go to my account</a>
    </div>
</div>