    ViewBag.MetaTitle = "Application process";
    ViewBag.PageID = "apprentice-application";
    ViewBag.HeroImageAltText = "Apprentice in the digital industry";
    ViewBag.Section = "apprentice";
    ViewBag.MetaDesc = "From finding the right apprenticeship and employer and how to write a good CV, covering letter and what to expect from the employer.";
