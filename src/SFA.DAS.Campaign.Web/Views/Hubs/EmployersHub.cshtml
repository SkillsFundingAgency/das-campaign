    ViewBag.PageTitle = "Hire an apprentice";
    ViewBag.PageSummary = "Employing an apprentice is easier than you think and there's financial help and support available from the Government.";

    ViewBag.HubPage = true;
    ViewBag.SubHeading = "Employers, here's what you need to know";
