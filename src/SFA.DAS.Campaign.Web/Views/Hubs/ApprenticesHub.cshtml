@{
    ViewBag.Title = "Apprentices";
    Layout = "Redesign_Layout_ApprenticesHub";

    ViewBag.PageTitle = "Become an apprentice";
    ViewBag.PageSummary = "Find out how to become an apprentice, what apprenticeships are available and which employers offer them.";

    ViewBag.HubPage = true;
    ViewBag.SubHeading = "Apprentices, here's what you need to know";
    ViewBag.HeadingImage = "apprentice-sparks.jpg";
}

<div class="fiu-grad-row">
    <span class="fiu-grad-row__bg"></span>
    <div class="fiu-width-container">
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="AreTheyRightForYou">Are they right for you?</a>
                    </span>
                    <h3 class="fiu-card__heading">Real stories</h3>
                    <p class="fiu-card__content">Watch some real-life accounts from existing apprentices and learn more about their experiences during their time on an apprenticeship.</p>
                    <a href="/apprentices/real-stories" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-1">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="AreTheyRightForYou">Are they right for you?</a>
                    </span>
                    <h3 class="fiu-card__heading">What are the benefits of an apprenticeship?</h3>
                    <p class="fiu-card__content">Once you've successfully finished, you have plenty of choices. Find out more.</p>
                    <a href="/apprentices/benefits-apprenticeship" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-2">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-half">
                <partial name="Redesign/_FindAnApprenticeship"/>
            </div>
        </div>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="AreTheyRightForYou">Are they right for you?</a>
                    </span>
                    <h3 class="fiu-card__heading">Advice for parents</h3>
                    <p class="fiu-card__content">Setting off on a career path can be overwhelming for young people. As their parent, guardian or carer, you'll play a key role in guiding them.</p>
                    <a href="/apprentices/help-shape-their-career" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-3">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="AreTheyRightForYou">Are they right for you?</a>
                    </span>
                    <h3 class="fiu-card__heading">Browse by interest</h3>
                    <p class="fiu-card__content">Browse sectors and see what type of industry-specific jobs you can expect from your preferred choice.</p>
                    <a href="/apprentices/browse-by-interests" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-4">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="HowDoTheyWork">How do they work?</a>
                    </span>
                    <h3 class="fiu-card__heading">What is an apprenticeship</h3>
                    <p class="fiu-card__content">An apprenticeship is a real job where you learn, gain experience and get paid. You're an employee with a contract of employment and holiday leave.</p>
                    <a href="/apprentices/what-is-apprenticeship" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-5">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="HowDoTheyWork">How do they work?</a>
                    </span>
                    <h3 class="fiu-card__heading">Applying for an apprenticeship</h3>
                    <p class="fiu-card__content">Once you find the right apprenticeship, you can start the application process. Learn about the steps in getting your apprenticeship started.</p>
                    <a href="/apprentices/applying-apprenticeship" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-6">Learn more</a>
                </div>
            </div>
        </div>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="HowDoTheyWork">How do they work?</a>
                    </span>
                    <h3 class="fiu-card__heading">The interview process</h3>
                    <p class="fiu-card__content">Everyone goes through the interview process at some stage of their working life. When you apply for new jobs, you will almost always have an interview.</p>
                    <a href="/apprentices/interview-process" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-7">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="GettingStarted">Get started</a>
                    </span>
                    <h3 class="fiu-card__heading">Starting your apprenticeship</h3>
                    <p class="fiu-card__content">Before you start your apprenticeship, your employer will usually contact you and ask a series of questions. Find out what they might be.</p>
                    <a href="/apprentices/starting-apprenticeship" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-8">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="GettingStarted">Get started</a>
                    </span>
                    <h3 class="fiu-card__heading">Assessment and certification</h3>
                    <p class="fiu-card__content">You will be assessed at some stage during your apprenticeship, to make sure you have achieved the knowledge, skills and behaviours required.</p>
                    <a href="/apprentices/assessment-and-certification" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-9">Learn more</a>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="fiu-card">
                    <span class="fiu-card__category">
                        <a class="fiu-card__category-link" asp-controller="LandingPage" asp-action="GettingStarted">Get started</a>
                    </span>
                    <h3 class="fiu-card__heading">Set up a service account</h3>
                    <p class="fiu-card__content">Get started by setting up an account on Find an Apprenticeship where you can search, save, apply and set up alerts for new vacancies.</p>
                    <a href="https://www.findapprenticeship.service.gov.uk/apprenticeshipsearch" class="fiu-card__link fiu-card__link--citizens" id="fiu-app-hub-card-10">Learn more</a>
                </div>
            </div>
        </div>
        <hr class="fiu-section-break fiu-section-break--l"/>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-full">
                <partial name="Redesign/_GetFreeHelpAndSupport"/>
            </div>
        </div>
        <hr class="fiu-section-break fiu-section-break--l"/>
    </div>
</div>