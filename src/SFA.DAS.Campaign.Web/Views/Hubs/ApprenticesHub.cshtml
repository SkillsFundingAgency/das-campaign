@{
    ViewBag.Title = "Become an apprentice";
    Layout = "Redesign_Layout_ApprenticesHub";

    ViewBag.PageTitle = "Become an apprentice";
    ViewBag.PageSummary = "Find out how to become an apprentice, what apprenticeships are available and which employers offer them.";

    ViewBag.HubPage = true;
    ViewBag.HeadingImage = "apprentice-sparks.jpg";
}

@section PageHeaderContent {
    <h2 class="govuk-heading-l fiu-page-header__sub-heading">What you need to know</h2>
}

<div class="fiu-grad-row">
    <span class="fiu-grad-row__bg"></span>
    <div class="fiu-width-container">
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/RealStories"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/WhatAreTheBenefits"/>
            </div>
            <div class="govuk-grid-column-one-half">
                <partial name="./Panels/_BrowseApprenticeships"/>
            </div>
        </div>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/AdviceForParents"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/BrowseByInterest"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/BecomingAnApprentice"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/ApplyingForAnApprenticeship"/>
            </div>
        </div>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/TheInterviewProcess"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/StartingYourApprenticeship"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/AssessmentAndCertification"/>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <partial name="./Cards/Apprentices/SetUpAccount"/>
            </div>
        </div>
        <hr class="fiu-section-break fiu-section-break--l"/>
        <div class="govuk-grid-row fiu-flex-row">
            <div class="govuk-grid-column-full">
                <partial name="./Panels/_GetFreeHelpAndSupport"/>
            </div>
        </div>
        <hr class="fiu-section-break fiu-section-break--l"/>
    </div>
</div>