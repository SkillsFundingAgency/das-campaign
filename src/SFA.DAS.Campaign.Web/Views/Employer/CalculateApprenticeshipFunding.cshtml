@model SFA.DAS.Campaign.Web.Models.ApprenticeshipFundingViewModel
@{
    ViewBag.Title = "Start your apprenticeship journey";
    Layout = $"Redesign_Layout_EmployersHub";
    ViewBag.PageTitle = "START YOUR APRENTICESHIP JOURNEY";
    ViewBag.PageSummary = "Discover how hiring an apprentice can benefit your business and find out what financial support and help is available to you.";
    ViewBag.LandingPageSlug = "are-they-right-for-you";
    ViewBag.LandingPageTitle = "Are they right for you?";
    ViewBag.ArticlePageSlug = "start-your-apprenticeship-journey";
    ViewBag.ArticlePageTitle = "Start your apprenticeship journey";
}

<div class="fiu-grad-row">
    <div class="fiu-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-third">
                <h2 class="govuk-heading-l govuk-!-margin-top-6">On this page</h2>
                <ul class="govuk-list govuk-list--spaced">
                    <li><a href="#@Model.Panel1.Slug" class="govuk-link govuk-link--no-visited-state">@Model.Panel1.LinkTitle</a></li>
                    <li><a href="#@Model.Panel2.Slug" class="govuk-link govuk-link--no-visited-state">@Model.Panel2.LinkTitle</a></li>
                    <li><a href="#funding" class="govuk-link govuk-link--no-visited-state">Find out what funding you could have available</a></li>
                </ul>
            </div>
            <div class="govuk-grid-column-two-thirds">

                <id id="@Model.Panel1.Slug">@await Html.PartialAsync("_Panel", Model.Panel1)</id>
                <id id="@Model.Panel2.Slug">@await Html.PartialAsync("_Panel", Model.Panel2)</id>
                @if (Model.Submitted == true)
                {
                    <id id="funding">@await Html.PartialAsync("_CalculationResults", Model)</id>
                }
                else
                {
                    <id id="funding">@await Html.PartialAsync("_Calculation", Model)</id>
                }
            </div>
        </div>
    </div>
</div>