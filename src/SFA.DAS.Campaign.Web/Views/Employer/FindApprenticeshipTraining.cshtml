@using Microsoft.AspNetCore.Html
@using SFA.DAS.Campaign.Web.Constants
@using SFA.DAS.Campaign.Web.ViewComponents
@using SFA.DAS.Campaign.Web.ViewComponents.HeroHeading
@{
    ViewBag.Title = "Search for an apprenticeship";
    ViewBag.PageTitle = "Search for an apprenticeship";
    ViewBag.LandingPageTitle = ViewBag.Title;
    ViewBag.LandingPageSlug = "";
    Layout = "Redesign_Layout_EmployersHub"; 
}
<span class="fiu-header-content-spacer"></span>
<div class="fiu-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body-l">Search for apprenticeship training that’s suitable for your business.</p>
            <p class="govuk-body">You can save any apprenticeships or training providers that you're interested in.</p>
            @await Component.InvokeAsync("FatSearch", new { FatSearchRoute = "employer/find-apprenticeship-training/Search", inline = true })
        </div>
    </div>
</div>