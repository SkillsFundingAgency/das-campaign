@using SFA.DAS.Campaign.Web.Models.Vacancy
@model SFA.DAS.Campaign.Web.Models.Vacancy.VacancySearchViewModel


@{
    ViewBag.Title = "Enter postcode";
    Layout = "_Layout";
}

<h1 class="heading-xlarge">Find an apprenticeship</h1>

<div class="grid-row">
    <div class="column-two-thirds postcode-search-form">
        <h2 class="heading-medium">
            Enter a postcode
        </h2>
        <form asp-action="UpdateSearch">
            <div class="form-group ">
           
                <label asp-for="Postcode" class="form-label-bold">
                    <span class="form-label-bold">Enter the full postcode of your apprentice's workplace</span>
                    <span class="form-hint">For example: 'SW1A 2AA'</span>

                    <span class="error-message">
                        <span id="error-postcode-service">

                        </span>
                    </span>
                </label>
                <input id="search-box" class="form-control" maxlength="50" placeholder="" asp-for="Postcode" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distance" class="form-label-bold"></label>
                <select asp-for="Distance" asp-items="Model.DistanceOptions" class="form-control"></select>

                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="button" />
            </div>
        </form>
    </div>

</div>