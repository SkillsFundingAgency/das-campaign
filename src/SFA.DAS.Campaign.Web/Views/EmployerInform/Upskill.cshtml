@using SFA.DAS.Campaign.Web.ViewComponents
@using SFA.DAS.Campaign.Web.ViewComponents.HeroHeading
@model SFA.DAS.Campaign.Content.ContentTypes.InfoPage
@{
    ViewBag.Title = Model.Title;
    ViewBag.MetaTitle = Model.PageTitle;
    ViewBag.HeroImageUrl = @Model.HeroImage.File.Url;
    ViewBag.HeroImageAltText = Model.HeroImage.Description;
    ViewBag.PageID = Model.Slug;
    ViewBag.MetaDesc = Model.MetaDescription;
    ViewBag.PageUrl = Model.Slug;
    ViewBag.Section = Model.Hub;
    Layout = "_Layout-campaign-employer-inform";
}

<info-page-section info-page="@Model" section-slug="boost-staff-performance-and-retention" section-container-class="content-section"></info-page-section>

<div class="cta-fat display--block">
    <info-page-section info-page="@Model" section-slug="hiring-an-apprentice"></info-page-section>

    <a asp-action="Index" asp-controller="HiringAnApprentice" class="button button--inverted button--sparks">Hire an apprentice</a>
</div>

<info-page-section info-page="@Model" section-slug="develop-new-skills-at-any-level" section-container-class="content-section"></info-page-section>

<info-page-section info-page="@Model" section-slug="you-do-not-have-to-give-them-a-different-job" section-container-class="content-section"></info-page-section>

<ul class="pagination pagination--employer">
    <li class="pagination__list-item">
        <a class="pagination__link pagination__link--previous" asp-action="Index" asp-controller="HiringAnApprentice">
            Hire an apprentice
        </a>
    </li>
    <li class="pagination__list-item">
        <a class="pagination__link pagination__link--next" asp-action="Index" asp-controller="FundingAnApprenticeship">
            Funding an apprenticeship
        </a>
    </li>
</ul>

@section HeroHeading {
    @await Component.InvokeAsync("HeroHeading", new HeroHeadingViewModel() { Type = HeroHeadingType.Employer, SubSectionTitle = "How do they work?", SubSectionUrl = Url.Action("Index", "HowDoTheyWork") })
}

@section pageFooter {
    <div class="grid-column-full">
        <partial name="./Components/Cta/_find-apprenticeship-training-with-search" />
    </div>
}