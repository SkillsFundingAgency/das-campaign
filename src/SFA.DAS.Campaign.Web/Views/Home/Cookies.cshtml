@using SFA.DAS.Campaign.Web.Models.Components.Form
@{
    Layout = "_LayoutContentTwoThirds";
    ViewBag.Title = "Cookies on Fire It Up";
    ViewBag.PageID = "cookies";
    ViewBag.MetaTitle = "Manage cookies on this website";
    ViewBag.MetaDesc = "Cookies are small text files that can be used by websites to make a user's experience more efficient. Use this page to set your cookie preferences.";
    ViewBag.HideCookieBanner = true;
}



<p>
    Cookies are files saved on your phone, tablet or computer when you visit a website.
</p>

<p>
    We use cookies to store information about how you use the website, such as the pages you visit.
</p>


<h2 class="heading-m">Cookie settings</h2>

<p>
    We use 3 types of cookie. You can choose which cookies you're happy for us to use.
</p>


@await Component.InvokeAsync("Form", new { type = FormType.CookieSettings })

<hr />
<p><a href="/cookie-details">Find out more about cookies on this service</a></p>
