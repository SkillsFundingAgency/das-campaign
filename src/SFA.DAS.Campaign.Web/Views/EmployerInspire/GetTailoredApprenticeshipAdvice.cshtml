                        <img src="/dist/campaign/images/employer/explore/index-icon-1.svg"/>
                        <img src="/dist/campaign/images/employer/explore/index-icon-1.svg"/>
                        <img src="/dist/campaign/images/employer/explore/index-icon-1.svg"/>
                    </div>
                    <div class="text">
                        <h3 class="heading-xs">Get tailored apprenticeship advice</h3>
                    </div>
                </a>
                <!-- SECTION 1 - END -->

                <!-- SECTION 2 - START -->
                <a href="@Url.Action("Employer", "RealStories")" class="illustrative-journey inpsire-section-2">
                    <div class="border">
                        <span class="spot top"></span>
                        <span class="spot bottom"></span>
                    </div>
                    <div class="image">
                        <img src="/dist/campaign/images/employer/explore/index-icon-2.svg"/>
