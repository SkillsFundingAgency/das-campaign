@{
    Layout = "_Layout-campaign-employer";
    ViewBag.Title = "Tailored apprenticeship advice";
    ViewBag.MetaTitle = "Tailored apprenticeship advice for employers";
    ViewBag.MetaDesc = "Not sure whether apprenticeships are right for you? Answer 4 quick questions to get free advice, including apprenticeships that could suit your needs and ";
}
<div class="hero FAT-basket FAT-save-standard padding-top">
    <div class="grid-row">
        <div class="grid-column-one-half">
            <div class="hero-heading">

                <span class="caption-m hero-heading__caption hero-heading__caption--employer">
                    <a href="@Url.Action("Employer", "RealStories")">Employer</a>
                    <div class="sep">&gt;</div>
                    Tailored apprenticeship advice
                </span>
                <h1 class="heading-xl hero-heading__heading" id="apprenticeship-title" style="font-size: 33.3333px;">Tailored apprenticeship advice</h1>
            </div>

            <div class="text-wrapper">
                <p class="lead-paragraph">
                    Whether your organisation is large or small, and whichever skills you want to boost,
                    we’ll help you decide whether apprenticeships are right for you.
                </p>

                <p>
                    Simply answer 4 quick questions and we’ll show you how apprenticeships could work for your organisation.
                    Your tailored advice will include:
                </p>

                <ul class="list list--arrows">
                    <li>potential apprenticeships to meet your needs</li>
                    <li>case studies and videos that are relevant to you</li>
                    <li>statistics showing how apprenticeships have worked for similar employers</li>
                    <li>information about funding for your type of organisation</li>
                </ul>

                <div class="cta-row">
                    <a id="continue-user-type" href="@Url.Action("Index", "WhichSkills")" class="button button--shadow button--sparks">Start now</a>
                </div>

            </div>

            <p>&nbsp;</p>

            <a href="https://www.gov.uk/" class="hmrc-gov">gov.uk</a>

        </div>
        <div class="grid-column-one-half">

            <div class="illustration-wrapper">

                <!-- SECTION 1 - START -->
                <a href="@Url.Action("Index", "GetTailoredApprenticeshipAdvice")" class="illustrative-journey inpsire-section-1">
