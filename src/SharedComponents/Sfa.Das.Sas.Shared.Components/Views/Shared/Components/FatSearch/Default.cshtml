@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject ICssViewModel CssViewModel;

<form asp-controller="Fat" asp-action="Search" method="get">
    <div class="@(CssViewModel.FormCss.FormGroup)">
        <label asp-for="Keywords" class="@(CssViewModel.VisuallyHidden)">Apprenticeship name or job role</label>
        <input asp-for="Keywords" class="@(CssViewModel.FormCss.Input)" type="search" placeholder="Apprenticeship keyword...">
    </div>
    <div class="@(CssViewModel.FormCss.FormGroup)">
        <button type="submit" class="@(CssViewModel.Button)">
            Search
        </button>
    </div>
</form>
