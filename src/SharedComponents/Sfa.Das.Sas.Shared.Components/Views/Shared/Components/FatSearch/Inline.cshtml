@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject ICssViewModel CssViewModel

<form asp-controller="Fat" asp-action="Search" method="get">
    <div class="@(CssViewModel.FormCss.FormGroup) das-form-group-inline">
        <label asp-for="Keywords" class="@(CssViewModel.VisuallyHidden)">Apprenticeship name or job role</label>
        <input asp-for="Keywords" class="@(CssViewModel.FormCss.Input)" type="search" placeholder="Apprenticeship name or job role&hellip;">
        <div class="das-form-group-inline__button-wrap">
            <button class="@(CssViewModel.Button)" type="submit" id="employer-apprenticeship-search">Search</button>
        </div>
    </div>
</form>